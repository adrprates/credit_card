<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/card_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toTopOf="@id/cardContainer" />

    <TextView
        android:id="@+id/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:text="Número do Cartão"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <EditText
        android:id="@+id/editCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:background="@android:color/transparent"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="19"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/cardNumber" />

    <TextView
        android:id="@+id/monthAndYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Mês/Ano"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/editCardNumber" />

    <EditText
        android:id="@+id/editMonthAndYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="250dp"
        android:background="@android:color/transparent"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="5"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/monthAndYear" />

    <TextView
        android:id="@+id/cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="CVV"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/editCardNumber" />

    <EditText
        android:id="@+id/editCvv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:digits="0123456789"
        android:inputType="number"
        android:maxLength="3"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/cvv" />

    <TextView
        android:id="@+id/cardHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Nome do Titular"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/cardContainer"
        app:layout_constraintTop_toBottomOf="@id/editMonthAndYear" />

    <EditText
        android:id="@+id/editCardHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="@id/cardHolder"
        app:layout_constraintTop_toBottomOf="@id/cardHolder" />

</androidx.constraintlayout.widget.ConstraintLayout>